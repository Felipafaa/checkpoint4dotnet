@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Dashboard de Microsserviços</h1>
</div>

@if (ViewBag.ApiError != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        <strong>Erro de Conexão:</strong> @ViewBag.ApiError
    </div>
}

<div class="row mt-4">
    <div class="col-md-7">
        <h3>Produtos Cadastrados (via ProductApi)</h3>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Products != null && ((IEnumerable<WebApp.Models.ProductViewModel>)ViewBag.Products).Any())
                {
                    foreach (var product in ViewBag.Products)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.StockQuantity</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Nenhum produto encontrado. Verifique se a ProductApi está rodando e se o banco de dados foi populado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-5">
        <h3>Cotação USD > BRL (via QuotationApi)</h3>
        <div style="background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: .25rem; padding: 1rem; height: 100%;">
            <pre><code>@ViewBag.Quotation</code></pre>
        </div>
    </div>
</div>